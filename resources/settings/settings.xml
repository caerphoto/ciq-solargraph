<settings>
    <setting propertyKey="@Properties.DrawDate" title="@Strings.MenuItemShowDate">
        <settingConfig type="list">
            <listEntry value="1">Yes</listEntry>
            <listEntry value="0">No</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.DrawHrSubdial" title="@Strings.MenuItemShowHrSubdial">
        <settingConfig type="list">
            <listEntry value="1">Yes</listEntry>
            <listEntry value="0">No</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.DrawBattery" title="@Strings.MenuItemShowBattery">
        <settingConfig type="list">
            <listEntry value="1">Yes</listEntry>
            <listEntry value="0">No</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.DrawSecondsHand" title="@Strings.MenuItemShowSeconds">
        <settingConfig type="list">
            <listEntry value="1">Yes</listEntry>
            <listEntry value="0">No</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.SecondsHandMode" title="@Strings.MenuItemSecondsHandMode">
        <settingConfig type="list">
            <listEntry value="1">Draw always (uses more battery)</listEntry>
            <listEntry value="0">Draw after gesture</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.SecondsHandColor" title="@Strings.MenuItemSecondsHandColor">
        <settingConfig type="list">
            <listEntry value="0">@Strings.ColorRed</listEntry>
            <listEntry value="1">@Strings.ColorOrange</listEntry>
            <listEntry value="2">@Strings.ColorYellow</listEntry>
            <listEntry value="3">@Strings.ColorGreen</listEntry>
            <listEntry value="4">@Strings.ColorTurquoise</listEntry>
            <listEntry value="5">@Strings.ColorBlue</listEntry>
            <listEntry value="6">@Strings.ColorPurple</listEntry>
            <listEntry value="7">@Strings.ColorPink</listEntry>

            <listEntry value="8">@Strings.ColorBlack</listEntry>
            <listEntry value="9">@Strings.ColorDarkGray</listEntry>
            <listEntry value="10">@Strings.ColorLightGray</listEntry>
            <listEntry value="11">@Strings.ColorWhite</listEntry>

            <listEntry value="12">@Strings.ColorDarkRed</listEntry>
            <listEntry value="13">@Strings.ColorOliveGreen</listEntry>
            <listEntry value="14">@Strings.ColorDarkGreen</listEntry>
            <listEntry value="15">@Strings.ColorDarkTurquoise</listEntry>
            <listEntry value="16">@Strings.ColorDarkBlue</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.ComplicationsColor" title="@Strings.MenuItemComplicationsColor">
        <settingConfig type="list">
            <listEntry value="0">@Strings.ColorRed</listEntry>
            <listEntry value="1">@Strings.ColorOrange</listEntry>
            <listEntry value="2">@Strings.ColorYellow</listEntry>
            <listEntry value="3">@Strings.ColorGreen</listEntry>
            <listEntry value="4">@Strings.ColorTurquoise</listEntry>
            <listEntry value="5">@Strings.ColorBlue</listEntry>
            <listEntry value="6">@Strings.ColorPurple</listEntry>
            <listEntry value="7">@Strings.ColorPink</listEntry>

            <listEntry value="8">@Strings.ColorBlack</listEntry>
            <listEntry value="9">@Strings.ColorDarkGray</listEntry>
            <listEntry value="10">@Strings.ColorLightGray</listEntry>
            <listEntry value="11">@Strings.ColorWhite</listEntry>

            <listEntry value="12">@Strings.ColorDarkRed</listEntry>
            <listEntry value="13">@Strings.ColorOliveGreen</listEntry>
            <listEntry value="14">@Strings.ColorDarkGreen</listEntry>
            <listEntry value="15">@Strings.ColorDarkTurquoise</listEntry>
            <listEntry value="16">@Strings.ColorDarkBlue</listEntry>
        </settingConfig>
    </setting>
</settings>
